---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { frontmatter } = Astro.props;
const { title, author, date } = frontmatter;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={`${title} â€” asterisk internationalist`}>
  <Header />
  
  <article class="container mx-auto px-6 py-16 max-w-4xl">
    <header class="mb-12 pb-8 border-b border-black">
      <p class="font-mono text-sm mb-4 opacity-70">{author}</p>
      <h1 class="text-4xl md:text-5xl font-serif leading-tight mb-4">{title}</h1>
      <time class="font-mono text-sm opacity-50" datetime={date}>{formattedDate}</time>
    </header>
    
    <div class="prose prose-lg max-w-none">
      <slot />
    </div>
  </article>
  
  <Footer />
</BaseLayout>