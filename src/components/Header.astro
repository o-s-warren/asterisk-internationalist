---
import bccLogo from '../images/bcc-logo.png';
import emDashLogo from '../images/em-dash-logo.png';
import asteriskInternationalistLogo from '../images/asterisk-internationalist-logo.svg';

interface Props {
  variant?: 'home' | 'article';
  articleNumber?: number;
}

const { variant = 'home', articleNumber } = Astro.props;
---

{variant === 'home' ? (
  <header class="flex justify-end items-center gap-6 px-8 md:px-12 py-8 md:py-12">
    <a href="https://brixtoncommunitycinema.com/"><img src={bccLogo.src} alt="Brixton Community Cinema" class="h-10 md:h-12 opacity-60 hover:opacity-100 transition-opacity"></a>
    <a href="https://em-dash.studio/"><img src={emDashLogo.src} alt="Em Dash" class="h-10 md:h-12 opacity-60 hover:opacity-100 transition-opacity"></a>
  </header>
) : (
  <header class="flex justify-between items-center px-8 md:px-12 py-6 md:py-8">
    <a href="/" class="hover:opacity-70 transition-opacity">
      <img 
        src={asteriskInternationalistLogo.src} 
        alt="asterisk internationalist" 
        class="h-6 md:h-8"
      >
    </a>
    {articleNumber && (
      <span class="font-azeret-mono text-sm md:text-base">
        âœ± {articleNumber}
      </span>
    )}
  </header>
)}
