      <div class="max-w-6xl mx-auto [&:has(article:hover)_article:not(:hover)]:opacity-30">
        
        <article class="transition-opacity duration-600">
          <!-- Divider -->
          <div class="divider-equals overflow-hidden py-4 text-asterisk-divider" aria-hidden="true">
            {equalsLine}
          </div>
          
          <!-- Article entry -->
          <a href="/queers-dont-just-shoot-back" class="block group py-4">
            <div class="flex items-start gap-6 md:gap-12">
              <span class="font-azeret-mono font-medium text-sm md:text-base shrink-0 pt-1">
